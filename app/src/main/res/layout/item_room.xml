<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="4dp">

    <!-- Border Glow Layer -->
    <View
        android:id="@+id/borderGlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_border_light_cyan"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeWidth="1dp"
        app:strokeColor="#E2E8F0"
        android:background="@drawable/bg_room_card_light"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="26dp">

            <!-- Room Number -->
            <TextView
                android:id="@+id/tvRoomNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="36sp"
                android:letterSpacing="0.05"
                android:text="#200"
                android:textColor="@color/accent_green"
                android:elevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Room Type -->
            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="15sp"
                android:text="Suite"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/tvRoomNumber"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Status Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:text="Available"
                android:textStyle="bold"
                android:textSize="13sp"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp"
                android:minHeight="40dp"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvType" />

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                app:layout_constraintTop_toBottomOf="@id/tvType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Price Label -->
            <TextView
                android:id="@+id/tvPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price per night"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="28sp"
                android:letterSpacing="0.02"
                android:text="â‚¹3,000"
                android:textColor="@color/accent_purple"
                android:elevation="2dp"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintTop_toBottomOf="@id/tvPriceLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Edit Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnEdit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/bg_btn_light_edit"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintEnd_toStartOf="@id/btnDelete"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="@drawable/bg_btn_light_delete"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
