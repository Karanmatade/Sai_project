<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light_gradient">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:titleTextColor="@color/text_primary"
        android:navigationIcon="@android:drawable/ic_media_previous"
        app:navigationIconTint="@color/accent_green"
        app:title="GUEST INFORMATION"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        android:paddingTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Guest Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGuestInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E2E8F0"
                android:background="@drawable/bg_card_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/sectionHeaderGuest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="@color/accent_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GUEST INFORMATION"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- Guest Name -->
                    <TextView
                        android:id="@+id/labelGuestName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest Name:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/sectionHeaderGuest"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvGuestName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/accent_green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelGuestName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Folio Number -->
                    <TextView
                        android:id="@+id/labelFolio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Folio Number:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvGuestName"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvFolioNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="FOL-12345"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelFolio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Address -->
                    <TextView
                        android:id="@+id/labelAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvFolioNumber"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="123 Main Street, City, State"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelAddress"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Company -->
                    <TextView
                        android:id="@+id/labelCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvAddress"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvCompany"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        app:layout_constraintTop_toBottomOf="@id/labelCompany"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Identification Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIdInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E2E8F0"
                android:background="@drawable/bg_card_light"
                app:layout_constraintTop_toBottomOf="@id/cardGuestInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/sectionHeaderId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:tint="@color/accent_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="IDENTIFICATION"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- ID Type -->
                    <TextView
                        android:id="@+id/labelIdType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Type:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/sectionHeaderId"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvIdType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Aadhar Card"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelIdType"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- ID Number -->
                    <TextView
                        android:id="@+id/labelIdNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Number:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvIdType"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvIdNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1234 5678 9012"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        app:layout_constraintTop_toBottomOf="@id/labelIdNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vehicle Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVehicleInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E2E8F0"
                android:background="@drawable/bg_card_light"
                app:layout_constraintTop_toBottomOf="@id/cardIdInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/sectionHeaderVehicle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/accent_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VEHICLE INFORMATION"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- Vehicle -->
                    <TextView
                        android:id="@+id/labelVehicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/sectionHeaderVehicle"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvVehicle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelVehicle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Vehicle Model -->
                    <TextView
                        android:id="@+id/labelVehicleModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvVehicle"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvVehicleModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelVehicleModel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Plate Number -->
                    <TextView
                        android:id="@+id/labelPlateNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plate Number:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvVehicleModel"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvPlateNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        app:layout_constraintTop_toBottomOf="@id/labelPlateNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Booking Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBookingInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E2E8F0"
                android:background="@drawable/bg_card_light"
                app:layout_constraintTop_toBottomOf="@id/cardVehicleInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/sectionHeaderBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:tint="@color/accent_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="BOOKING INFORMATION"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- Room Number -->
                    <TextView
                        android:id="@+id/labelRoomNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room Number:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/sectionHeaderBooking"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvRoomNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Room #200"
                        android:textColor="@color/accent_green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelRoomNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Check-in Date -->
                    <TextView
                        android:id="@+id/labelCheckIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in Date:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvRoomNumber"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvCheckInDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2024-01-01"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelCheckIn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Check-out Date -->
                    <TextView
                        android:id="@+id/labelCheckOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-out Date:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvCheckInDate"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvCheckOutDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2024-01-05"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/labelCheckOut"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Status -->
                    <TextView
                        android:id="@+id/labelStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvCheckOutDate"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textColor="@color/accent_green"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/labelStatus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

